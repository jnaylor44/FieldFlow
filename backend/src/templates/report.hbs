<!-- backend/src/templates/report.hbs -->
<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Report {{reportNumber}}</title>
  <style>
    body {
      font-family: Arial, Helvetica, sans-serif;
      margin: 0;
      padding: 0;
      color: #333;
      font-size: 12px;
    }
    .report-container {
      max-width: 800px;
      margin: 0 auto;
      padding: 20px;
    }
    .report-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 30px;
      border-bottom: 1px solid #eee;
      padding-bottom: 20px;
    }
    .report-logo {
      max-height: 80px;
      max-width: 200px;
    }
    .report-info {
      text-align: right;
    }
    .report-title {
      font-size: 24px;
      font-weight: bold;
      margin-bottom: 15px;
    }
    .customer-info {
      margin-bottom: 20px;
      padding: 15px;
      background-color: #f8f9fa;
      border-radius: 5px;
    }
    .section {
      margin-bottom: 30px;
    }
    .section-title {
      font-size: 16px;
      font-weight: bold;
      margin-bottom: 10px;
      padding-bottom: 5px;
      border-bottom: 1px solid #ddd;
    }
    .section-content {
      margin-bottom: 15px;
    }
    .photo-container {
      max-width: 100%;
      max-height: 300px;
      margin-bottom: 10px;
    }
    .photo-container img {
      max-width: 100%;
      max-height: 300px;
      object-fit: contain;
    }
    .signature-container {
      max-height: 100px;
      margin-top: 20px;
    }
    .signature-container img {
      max-height: 100px;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 20px;
    }
    table, th, td {
      border: 1px solid #ddd;
    }
    th, td {
      padding: 8px;
      text-align: left;
    }
    th {
      background-color: #f2f2f2;
    }
    .checkbox {
      display: inline-block;
      width: 15px;
      height: 15px;
      border: 1px solid #333;
      text-align: center;
      line-height: 15px;
      margin-right: 5px;
    }
    .checked {
      background-color: #333;
      color: white;
    }
    .checklist-grid {
      display: grid;
      grid-template-columns: repeat(1, 1fr);
      gap: 8px;
    }
    .checklist-grid.cols-2 {
      grid-template-columns: repeat(2, 1fr);
    }
    .checklist-grid.cols-3 {
      grid-template-columns: repeat(3, 1fr);
    }
    .checklist-grid.cols-4 {
      grid-template-columns: repeat(4, 1fr);
    }
    .checklist-item {
      display: flex;
      align-items: flex-start;
      margin-bottom: 8px;
    }
    .checklist-text {
      padding-top: 1px;
    }
    .checklist-note {
      margin-left: 25px;
      font-style: italic;
      font-size: 11px;
      color: #666;
      margin-top: 3px;
      margin-bottom: 8px;
    }
    .checklist-summary {
      margin-top: 12px;
      padding-top: 12px;
      border-top: 1px dotted #ddd;
    }
    .report-footer {
      margin-top: 50px;
      text-align: center;
      font-size: 10px;
      color: #777;
      border-top: 1px solid #eee;
      padding-top: 15px;
    }
    @media print {
      body {
        -webkit-print-color-adjust: exact;
        print-color-adjust: exact;
      }
    }
  </style>
</head>
<body>
  <div class="report-container">
    <div class="report-header">
      <div>
        {{#if logo}}
        <img 
            src="{{logo}}" 
            class="report-logo" 
            alt="Company Logo" 
            style="max-height: 80px; max-width: 200px; display: block; margin-bottom: 10px;"
            onerror="this.style.display='none';" 
        />
        {{else}}
        <h1>{{businessName}}</h1>
        {{/if}}
      </div>
      <div class="report-info">
        <div class="report-title">Report: {{reportNumber}}</div>
        <div>Date: {{formatDate reportDate}}</div>
      </div>
    </div>

    <div class="customer-info">
      <h2>Customer Information</h2>
      <table>
        <tr>
          <th>Name</th>
          <td>{{customer.name}}</td>
        </tr>
        {{#if customer.company}}
        <tr>
          <th>Company</th>
          <td>{{customer.company}}</td>
        </tr>
        {{/if}}
        {{#if customer.email}}
        <tr>
          <th>Email</th>
          <td>{{customer.email}}</td>
        </tr>
        {{/if}}
      </table>

      {{#if job}}
      <h3>Job Details</h3>
      <table>
        <tr>
          <th>Job Title</th>
          <td>{{job.title}}</td>
        </tr>
        <tr>
          <th>Status</th>
          <td>{{job.status}}</td>
        </tr>
        <tr>
          <th>Scheduled Date</th>
          <td>{{formatDate job.scheduled_start}}</td>
        </tr>
      </table>
      {{/if}}
    </div>

    {{#each sections}}
    <div class="section">
      <div class="section-title">{{title}}</div>
      <div class="section-content">
        {{#ifEquals type "static"}}
          <div>{{content}}</div>
        {{/ifEquals}}
        
        {{#ifEquals type "text"}}
          <div>{{value}}</div>
        {{/ifEquals}}
        
        {{#ifEquals type "textarea"}}
          <div style="white-space: pre-line;">{{value}}</div>
        {{/ifEquals}}
        
        {{#ifEquals type "number"}}
          <div>{{value}}</div>
        {{/ifEquals}}
        
        {{#ifEquals type "checkbox"}}
          <div>
            <span class="checkbox {{#if value}}checked{{/if}}">
              {{#if value}}&#10003;{{/if}}
            </span>
            {{placeholder}}
          </div>
        {{/ifEquals}}
        
        {{#ifEquals type "select"}}
          <div>{{value}}</div>
        {{/ifEquals}}
        
        {{#ifEquals type "date"}}
          <div>{{formatDate value}}</div>
        {{/ifEquals}}
        
        {{#ifEquals type "photo"}}
          {{#if value}}
          <div class="photo-container">
            <img src="{{value}}" alt="Photo for {{title}}">
          </div>
          {{else}}
          <div>(No photo provided)</div>
          {{/if}}
        {{/ifEquals}}
        
        {{#ifEquals type "signature"}}
          {{#if value}}
          <div class="signature-container">
            <img src="{{value}}" alt="Signature">
          </div>
          {{else}}
          <div>(No signature provided)</div>
          {{/if}}
        {{/ifEquals}}
        
        {{#ifEquals type "checklist"}}
          {{#if checklistItems}}
            <div class="checklist-grid cols-{{columns}}">
              {{#each checklistItems}}
                <div class="checklist-item">
                  <span class="checkbox {{#if checked}}checked{{/if}}">
                    {{#if checked}}&#10003;{{/if}}
                  </span>
                  <span class="checklist-text">{{text}}</span>
                </div>
                {{#if note}}
                  <div class="checklist-note">
                    Note: {{note}}
                  </div>
                {{/if}}
              {{/each}}
            </div>
          
            {{#if summarizeSelected}}
              <div class="checklist-summary">
                <strong>Selected Items:</strong>
                <ul>
                  {{#each checklistItems}}
                    {{#if checked}}
                      <li>
                        {{text}}
                        {{#if note}}
                          <span class="checklist-note">
                            ({{note}})
                          </span>
                        {{/if}}
                      </li>
                    {{/if}}
                  {{/each}}
                </ul>
              </div>
            {{/if}}
          {{else}}
            <div>(No checklist items defined)</div>
          {{/if}}
        {{/ifEquals}}
      </div>
    </div>
    {{/each}}

    <div class="report-footer">
      <p> Report Number: {{reportNumber}} | {{formatDate reportDate}}</p>
    </div>
  </div>
</body>
</html>